<h1 class="text-center mt-5">Sign Up</h1>
<div class="container">
  <center>
    <div class="row justify-content-center mt-5">
      <div class="col-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"shadow-sm p-3 mb-2 bg-info rounded"}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field form-group row">
            <%= f.label :name,class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :name ,class:"form-control shadow rounded",autofocus: true%>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :email, class:"col-2 col-form-label"%>
            <div class="col-10">
              <%= f.email_field :email,class:"form-control shadow rounded", autocomplete: "email" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password ,class:"col-2 col-form-label"%>
            <div class="col-10">
              <%= f.password_field :password, class:"form-control shadow rounded",autocomplete: "new-password" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password_confirmation,class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.password_field :password_confirmation, class:"form-control shadow rounded",autocomplete: "new-password" %>
            </div>
          </div>
          <div class="field form-group row">
            <%= f.label :user_type,class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.select :user_type, ["Manager", "Developer", "Qa"],{prompt: "Select"},class:"form-control " %>
            </div>
          </div>
          <div class="actions justify-content-center">
            <%= f.submit "Sign up",class:"btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    </center>
</div>
  



